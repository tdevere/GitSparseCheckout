{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Inspect Workspace (PowerShell – Full)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NonInteractive",
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/inspect-workspace.ps1"
      ],
      "options": {
        "env": {
          "SPARSE_MODE": "FULL-CHECKOUT",
          "SOURCES_DIR": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Inspect Workspace (PowerShell – Sparse Directories)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NonInteractive",
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/inspect-workspace.ps1"
      ],
      "options": {
        "env": {
          "SPARSE_MODE": "SPARSE-DIRECTORIES",
          "SOURCES_DIR": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Inspect Workspace (PowerShell – Sparse Patterns)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NonInteractive",
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/inspect-workspace.ps1"
      ],
      "options": {
        "env": {
          "SPARSE_MODE": "SPARSE-PATTERNS",
          "SOURCES_DIR": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Inspect Workspace (PowerShell – Both/Patterns Win)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NonInteractive",
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/inspect-workspace.ps1"
      ],
      "options": {
        "env": {
          "SPARSE_MODE": "SPARSE-BOTH-PATTERNS-WIN",
          "SOURCES_DIR": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Inspect Workspace (Bash – Full)",
      "type": "shell",
      "command": "bash",
      "args": ["${workspaceFolder}/tools/inspect-workspace.sh"],
      "options": {
        "env": {
          "SPARSE_MODE": "FULL-CHECKOUT",
          "SOURCES_DIR": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Validate YAML files",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NonInteractive",
        "-NoProfile",
        "-Command",
        "Get-ChildItem -Recurse -Filter '*.yml' | ForEach-Object { Write-Host \"Checking: $($_.FullName)\"; [void][System.IO.File]::ReadAllText($_.FullName) }; Write-Host 'All YAML files readable.'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "New Case Setup",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NonInteractive",
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-Command",
        "$slug = Read-Host 'Case slug (e.g. sparse-onprem-silent)'; $date = Get-Date -Format 'yyyy-MM-dd'; $branch = \"case/$date-$slug\"; $docName = \"$date-$slug.md\"; $destDir = Join-Path '${workspaceFolder}' 'docs' 'cases'; $dest = Join-Path $destDir $docName; git -C '${workspaceFolder}' checkout main; git -C '${workspaceFolder}' pull; git -C '${workspaceFolder}' checkout -b $branch; Copy-Item (Join-Path '${workspaceFolder}' 'docs' 'CaseTemplate.md') $dest; Write-Host \"Created branch $branch\"; Write-Host \"Case doc: docs/cases/$docName\"; Write-Host 'Fill in Phase 1 (Intake) and follow WORKFLOW.md'"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
